% A setup snippet for unnumbered chapters
\markdownSetupSnippet{unnumbered-chapter}{
  renderers = {
    headingOne = {%
      \chapter*{#1}
      \markright{\textsc{#1}}
      \addcontentsline{toc}{chapter}{#1}
    },
  },
}

% Non-teletype links
\def\markdownRendererLinkPrototype{%
  \begingroup
  \catcode`\#=12
  \def\next##1##2##3##4{%
    ##1\footnote{%
      \ifx\empty##4\empty See \else##4: \fi\href{##3}{{\sffamily\color{thesis@color@secondary}##2}}.%
    }%
    \endgroup
  }%
  \next
}

